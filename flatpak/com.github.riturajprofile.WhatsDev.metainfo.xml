<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.github.riturajprofile.WhatsDev</id>
  <name>WhatsDev</name>
  <summary>WhatsApp Web Desktop App for Linux</summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <developer_name>riturajprofile</developer_name>
  
  <description>
    <p>
      WhatsDev is a lightweight, portable WhatsApp desktop client that runs on any Linux distribution.
    </p>
    <p>Features:</p>
    <ul>
      <li>System Tray - Minimize to tray, click to restore</li>
      <li>Unread Counter - Shows unread message count in tray tooltip</li>
      <li>Clean UI - No menu bar clutter, just WhatsApp</li>
      <li>Single Instance - Prevents multiple windows</li>
      <li>Performance Modes - Choose between Normal or Low Resource mode</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.github.riturajprofile.WhatsDev.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>WhatsDev main window</caption>
      <image>https://web.whatsapp.com/img/intro-connection-light.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://github.com/riturajprofile/whatsdev</url>
  <url type="bugtracker">https://github.com/riturajprofile/whatsdev/issues</url>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
  </content_rating>

  <releases>
    <release version="1.0.0" date="2026-01-05">
      <description>
        <p>Initial release with:</p>
        <ul>
          <li>System tray support</li>
          <li>Unread message counter</li>
          <li>Performance mode selection</li>
          <li>Autostart on login</li>
        </ul>
      </description>
    </release>
  </releases>

  <categories>
    <category>Network</category>
    <category>InstantMessaging</category>
    <category>Chat</category>
  </categories>

  <keywords>
    <keyword>whatsapp</keyword>
    <keyword>chat</keyword>
    <keyword>messaging</keyword>
    <keyword>web</keyword>
  </keywords>

  <provides>
    <binary>whatsdev</binary>
  </provides>
</component>
